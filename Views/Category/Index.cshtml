@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<div class ="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
</div>
<br/><br/>
<table class="table table-borderd table-stripped" style="width:100%">
    <thead>
        <tr>
            <th>Category Image</th>
            <th>Category Name</th>
            <th>Display Order</th>
             <th>Edit</th>
             <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <center>

            <tr>
                <td width="25%">
                    <div>
                        <img src=@obj.Image style="width:50px;border-radius: 50%;">
                    </div>
                   
                </td>
                <td width="25%">@obj.Name</td>
                <td width="25%">@obj.DisplayOrder</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-success mx-2" asp-action="Edit" asp-controller="Category" asp-route-id="@obj.Id"><i class="bi bi-pencil-square"></i>Edit</a>
                    </div>
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-danger mx-2" asp-action="Delete" asp-controller="Category" asp-route-id="@obj.Id"><i class="bi bi-trash"></i>Delete</a>
                    </div>
                </td>
            </tr>
            </center>

        }
    </tbody>
</table>

